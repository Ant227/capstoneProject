<?xml version="1.0" encoding="utf-8"?><MotionScene    xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto">    <Transition        app:constraintSetStart="@id/start"        app:constraintSetEnd="@id/end"        app:duration="1500"        app:autoTransition="animateToEnd"/>    <ConstraintSet android:id="@+id/start">        <Constraint            android:id="@+id/button_search"            android:layout_width="0dp"            android:layout_height="wrap_content"            app:layout_constraintTop_toBottomOf="@id/zip"            />        <Constraint            android:id="@+id/button_location"            android:layout_width="0dp"            android:layout_height="wrap_content"            app:layout_constraintTop_toBottomOf="@id/button_search" />    </ConstraintSet>    <ConstraintSet android:id="@+id/end">        <Constraint            android:id="@+id/button_search"            android:layout_width="match_parent"            android:layout_height="wrap_content"            app:layout_constraintTop_toBottomOf="@id/zip"            android:layout_marginStart="4dp"            android:layout_marginEnd="4dp"/>        <Constraint            android:id="@+id/button_location"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_marginTop="4dp"            android:layout_marginStart="4dp"            android:layout_marginEnd="4dp"            app:layout_constraintTop_toBottomOf="@id/button_search"/>    </ConstraintSet></MotionScene>